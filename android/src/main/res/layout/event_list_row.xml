<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/radius"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/container_left"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/matchCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="256"
                    android:textColor="#29BBEE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <view
                    android:id="@+id/mbsView"
                    class="com.asciiman.nativelistview.MbsView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shortLeagueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.90"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeTeamText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/awayTeamText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <view
                android:id="@+id/oddButton1"
                class="com.asciiman.nativelistview.OddButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <view
                android:id="@+id/oddButtonX"
                class="com.asciiman.nativelistview.OddButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <view
                android:id="@+id/oddButton2"
                class="com.asciiman.nativelistview.OddButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/container_right"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <view
                android:id="@+id/detailButton"
                class="com.asciiman.nativelistview.FontAwesomeIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignEnd="@+id/statisticsButton"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:text="@string/fa_chevron_down"
                android:textColor="#3c597e"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/statisticsButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#DDD"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/icon_statistics" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>